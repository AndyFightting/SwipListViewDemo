<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.suguiming.swiplistview" >

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/appName"
        android:theme="@style/Theme.SwipeListView"
        android:hardwareAccelerated="true">

        <activity android:name=".Activity.SwipeListViewExampleActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Activity.SettingsActivity" android:windowSoftInputMode="stateAlwaysHidden"/>

    </application>

</manifest>
